<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.perez.ramon.adivinamicarta.MainActivity">

    <!--Cuadricula de cartas -->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_weight="1">
        <!-- Primera columna-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/posicionUno"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/posicionDos"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/posicionTres"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="40sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <!-- Segunda  columna-->
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/posicionCuatro"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="40sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/posicionCinco"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/posicionSeis"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="40sp"
            android:textAlignment="center"/>
    </LinearLayout>
        <!-- Segunda  columna-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/posicionSiete"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="40sp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/posicionOcho"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="40sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/posicionNueve"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="40sp"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <!--Barra de estado de juego -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Estado de Juego"
            android:textSize="24sp"
            android:textAlignment="center"/>
    </LinearLayout>


</LinearLayout>
